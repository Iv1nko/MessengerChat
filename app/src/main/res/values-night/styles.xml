<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settingsButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="background">@drawable/ripple_effect</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:focusable">true</item>

    </style>

    <style name="normalText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/ic_launcher_background</item>
        <item name="android:paddingLeft">18dp</item>
    </style>

    <style name="smallText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:paddingLeft">18dp</item>
    </style>

    <style name="seporator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/ic_launcher_background</item>
        <item name="android:layout_margin">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="setting_btn_change_photo">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>
</resources>