<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/itemLayout">

    <ImageView
        android:id="@+id/imagePurchase"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/tshirt1" />

    <TextView
        android:id="@+id/textPurchase"
        android:layout_marginTop="10dp"
        android:layout_width="220dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="15.5sp"
        android:layout_height="wrap_content"
        tools:text="@string/saccs1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagePurchase"
        app:layout_constraintTop_toTopOf="@+id/imagePurchase" />

    <TextView
        android:id="@+id/textCountOfPurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="23dp"
        android:text="2 Шт."
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/textPurchase"
        app:layout_constraintStart_toEndOf="@+id/imagePurchase"
        app:layout_constraintTop_toBottomOf="@+id/textPurchase" />

<!--    <ImageButton-->
<!--        android:id="@+id/ibBasket"-->
<!--        android:layout_width="30dp"-->
<!--        android:layout_height="30dp"-->
<!--        android:layout_marginEnd="40dp"-->
<!--        android:background="@drawable/trash_solid"-->
<!--        app:layout_constraintBottom_toBottomOf="@+id/textCountOfPurchase"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="@+id/textCountOfPurchase" />-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/gray_in_white"
        app:layout_constraintTop_toBottomOf="@+id/imagePurchase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>